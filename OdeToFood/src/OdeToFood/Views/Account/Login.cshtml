@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<form method="post" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="form-horizontal login-form">
    <fieldset>
        <legend>Login</legend>
        <div class="form-group">
            <label asp-for="Username" class="col-lg-5 control-label"></label>
            <div class="col-lg-7">
                <input asp-for="Username" class="form-control">
            </div>
            <span asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-lg-5 control-label"></label>
            <div class="col-lg-7">
                <input asp-for="Password" class="form-control">
                <div class="checkbox">
                    <label for="RememberMe">
                        <input asp-for="RememberMe" />
                        Remember me
                    </label>
                </div>
            </div>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <input type="submit" value="Login" class="btn btn-default pull-right" />
        </div>
    </fieldset>
</form>
